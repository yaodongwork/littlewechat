.swiper-top{
  width: 100%;
  height: 600rpx;
}
.swiper-top image{
  width:100%;
  height:600rpx;
}
.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 50rpx solid #ededed;
  padding-bottom: 5px;
}

.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;  
  border-radius: 50%;
}

.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-size: 26rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 20rpx;
}

.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}

.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like{
  font-size: 13rpx;
  flex-direction: row;
  line-height: 16rpx;
  margin-left: 20rpx;
}

.post-like-image{
  height: 36rpx;
  width: 36rpx;
  margin-right: 16rpx;
  vertical-align: middle;
}

.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
  font-size: 28rpx;
}
